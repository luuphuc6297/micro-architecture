{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@micro-architecture-coaching-cloud/apis": ["libs/apis/src/index.ts"],
            "@micro-architecture-coaching-cloud/configs": ["libs/configs/src/index.ts"],
            "@micro-architecture-coaching-cloud/models": ["libs/models/src/index.ts"],
            "@micro-architecture-coaching-cloud/ui": ["libs/ui/src/index.ts"],
            "@micro-architecture-coaching-cloud/utils": ["libs/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
